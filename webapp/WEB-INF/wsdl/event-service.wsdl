<wsdl:definitions xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
                  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
                  xmlns:tns="urn://x-artefacts-coko/ege/services/1.0.0"
                  xmlns:exceptions="urn://x-artefacts-coko/ege/services/exceptions/1.0.0"
                  targetNamespace="urn://x-artefacts-coko/ege/services/1.0.0">
    <wsdl:types>
        <xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                    targetNamespace="urn://x-artefacts-coko/ege/services/1.0.0">
            <xsd:include schemaLocation="../schemas/events-service/service-schema.xsd"/>
        </xsd:schema>
    </wsdl:types>


    <wsdl:message name="manageRequestIn">
        <wsdl:part element="tns:NewRequest" name="NewRequest" />
    </wsdl:message>

    <wsdl:message name="manageRequestOut">
        <wsdl:part element="tns:NewResponse" name="NewResponse" />
    </wsdl:message>




    <wsdl:message name="BiException">
        <wsdl:part name="parameters" element="exceptions:BiException" />
    </wsdl:message>

    <wsdl:portType name="eventServicePort">


        <wsdl:operation name="manageRequest">
            <wsdl:input message="tns:manageRequestIn"/>
            <wsdl:output message="tns:manageRequestOut"/>
            <wsdl:fault name="BiException" message="tns:BiException"/>
        </wsdl:operation>

    </wsdl:portType>

    <wsdl:binding name="eventServicePortBinding" type="tns:eventServicePort">
        <soap:binding transport="http://schemas.xmlsoap.org/soap/http"/>


        <wsdl:operation name="manageRequest">
            <soap:operation soapAction="urn://nahodka.ru/services/eventService/manageRequest" style="document"/>
            <wsdl:input>
                <soap:body use="literal"/>
            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal"/>
            </wsdl:output>
            <wsdl:fault name="BiException">
                <soap:fault name="BiException" use="literal" encodingStyle="UTF-8"/>
            </wsdl:fault>
        </wsdl:operation>


    </wsdl:binding>

    <wsdl:service name="EventService">
        <wsdl:port binding="tns:eventServicePortBinding" name="eventServicePort">
            <soap:address location="http://localhost:8080/services/eventService/"/>
        </wsdl:port>
    </wsdl:service>
</wsdl:definitions>